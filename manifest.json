{
  "name": "WikiPedia Previews",
  "description": "Previews articles",
  "version": "0.1",
  "permissions": [
    "background"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://*.wikipedia.org/*"],
      "css": ["preview-links.css"],
      "js": ["bower_components/jquery/dist/jquery.min.js", "parse-links.js"]
    }
  ],
  "manifest_version": 2
}
